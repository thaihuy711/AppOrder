<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopUpActivity" parent="Base.Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="EdittextStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edittextstyle</item>
    </style>
    <style name="edittext_themmon">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_style_themmon</item>
    </style>


    <style name="ImgStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/imgstyle</item>
    </style>

</resources>
