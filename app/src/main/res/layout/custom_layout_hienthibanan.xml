<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imBanAn"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_below="@+id/txtTenBanAn"
        android:src="@drawable/order"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/txtTenBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imBanAn"
        app:layout_constraintLeft_toLeftOf="@id/imBanAn"
        app:layout_constraintRight_toRightOf="@id/imBanAn"
        app:layout_constraintTop_toTopOf="@id/imBanAn" />

    <ImageView
        android:id="@+id/imGoiMon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_order"
        android:visibility="invisible"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imThanhToan"
        app:layout_constraintTop_toBottomOf="@id/imBanAn" />

    <ImageView
        android:id="@+id/imThanhToan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_thanhtoan"
        android:visibility="invisible"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/imGoiMon"
        app:layout_constraintRight_toLeftOf="@id/imAnButton"
        app:layout_constraintTop_toBottomOf="@id/imBanAn" />

    <ImageView
        android:id="@+id/imAnButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:visibility="invisible"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginRight="@dimen/dp_15"
        app:layout_constraintLeft_toRightOf="@id/imThanhToan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imBanAn" />

</android.support.constraint.ConstraintLayout>
